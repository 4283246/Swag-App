        <Label Text="T-shirt Color" />
        <Entry Text="{Binding T-shirt name}" />
        <Label Text="Done" />
        <Switch IsToggled="{Binding Done}" />
        <Button Text="Save"
                Clicked="OnSaveClicked" />
        <Button














    <Switch IsToggled="{Binding Gender}" />
